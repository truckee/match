{% block body %}
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            {{ headerText }}
        </div>
    </div>
            {{ form_start(form) }}
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-6">
            <input class="btn-sm btn-info" type="submit" name="submit" value="Submit">
        </div>
    </div>
            {{ form_end(form) }}
{% endblock %}
