{% extends 'base.html.twig' %}

{% block body %}{{ headerText }}
    {{ form_start(form) }}
    <div class="row m-1">
        <div class="col-4 form-inline">
            {{ form.vars.value.fname }} {{ form.vars.value.sname }}
        </div>
    </div>
    <div class="row m-1">
        <div class="col-9 form-inline">
            Email: {{ form.vars.value.email }}
        </div>
    </div>
    <div class="row m-1">
        <div class="col-4 form-inline">
            {{ form_row(form.plainPassword.first) }}
        </div>
    </div>
    <div class="row m-1 form-inline">
        <div class="col-4 form-inline">
            {{ form_row(form.plainPassword.second) }}
        </div>
    </div>
    <div class="row m-1">
        <div class="col-4">
            {{ form_row(form._token) }}
            <button class="btn btn-info" type="submit">Set password</button>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
