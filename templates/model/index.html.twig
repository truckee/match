{% extends 'base.html.twig' %}

{% block title %}Model index{% endblock %}

{% block body %}
    <h3>Class Cs with our criteria</h3>
    <div class="row">
        <div class="col-3 text-bold">Name</div>
        <div class="col-2 text-bold">Action</div>
    </div>
    {% for model in models %}
        <div class="row">
            <div class="col-3">{{ model.name }}</div>
            <div class="col-1"> <a href="{{ path('model_edit', {'id': model.id}) }}">edit</a></div>
            <div class="col-1"> <a href="{{ path('model_delete', {'id': model.id}) }}">delete</a></div>
        </div>
    {% endfor %}
    <a href="{{ path('model_new') }}">Create new</a>
    <a href="{{ path('home') }}" class="btn btn-primary  btn-sm">Return</a>
{% endblock %}
