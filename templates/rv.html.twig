{% extends "base.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-4">
            Class C
        </div>
        <div class="col-2">
            Price
        </div>
        <div class="col-4">
            Class B+
        </div>
        <div class="col-2">
            Price
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            {% for rv in classC %}
                <div class="row">
                    <div class="col-8">
                        {{ rv.name }}
                        {#<a href="{{ path('history', {'model': rv.name}) }}">{{ rv.name }}</a>#}
                    </div>
                    <div class="col-4">
                        ${{ rv.Avg|number_format }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-6">
            {% for bee in classB %}
                <div class="row">
                    <div class="col-8">
                        {{ bee.ymm }}
                    </div>
                    <div class="col-4">
                        ${{ bee.price|number_format }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <a href="{{ path('home') }}" class="btn btn-primary">Return</a>
{% endblock %}