{% extends 'base.html.twig' %}
{% form_theme form 'form/form_row.html.twig' %}
{% block body %}
    <div class="text-center text-uppercase mb-2" style="font-size: 18px;">
        <b>{{ headerText }}</b>
    </div>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        {% for template in templates %}
            <div class="col-4">
                {% include template %}
            </div>
        {% endfor %}
    </div>
    <div class="row">
        <div class="col-4">
            {{ form_row(form._token) }}
            <div><input class="btn-sm btn-info" type="submit" name="submit" value="Submit"></div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
