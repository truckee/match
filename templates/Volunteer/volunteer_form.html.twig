{% extends 'base.html.twig' %}
{% form_theme form 'form/form_row.html.twig' %}
{% block body %}
    <div class="text-center mb-2" style="font-size: 18px;">
        {% autoescape %}
            <b>{{ headerText|raw }}</b>
        {% endautoescape %}
    </div>
    <div class="text-center">
        <span class="text-danger">*</span> indicates item is required
    </div>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="row">
        <div class="col-4">
        </div>
        <div class="col-4">
            {% include 'Registration/new_user.html.twig' %}
        </div>
    </div>
    <div class="row">
        <div class="col-3">
        </div>
        <div class="col-3">
            {% include 'Default/focuses.html.twig' %}
        </div>
        <div class="col-1">
        </div>
        <div class="col-3">
            {% include 'Default/skills.html.twig' %}
        </div>
    </div>
    <div class="row">
        <div class="col-4">
        </div>
        <div class="col-4 text-center">
            {{ form_row(form._token) }}
            {% if submitValue is not defined %}{% set value = 'Save' %}{% else %}{% set value = submitValue %}{% endif %}
            <div><input class="btn-sm btn-info" type="submit" name="submit" value="{{ value }}"></div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
