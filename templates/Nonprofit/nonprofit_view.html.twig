{% extends 'base.html.twig' %}
{% block body %}
    <div class="text-center mb-2">
        <div style="font-size: 24pt; font-style: bold;">
            {{ npo.orgname }}
        </div>
            Staff: {{ npo.staff.fname }} {{ npo.staff.sname }};  <a class="text-decoration-none" href="mailto:{{ npo.staff.email }}">{{ npo.staff.email }}</a>
    </div>
    <div style="margin-left: 20%">
        <div class="d-flex flex-row">
            <div class="d-flex p-2">
                Address
            </div>
            <div class="d-flex p-2">
                {{ npo.address }} {{ npo.city }}, {{ npo.zip }}
            </div>
        </div>
        {% if npo.website is not null %}
            <div class="d-flex flex-row">
                <div class="d-flex p-2">
                    Website
                </div>
                <div class="d-flex p-2">
                    <a class="text-decoration-none" href="{{ npo.website }}">{{ npo.website }}</a>
                </div>
            </div>
        {% endif %}
        <div><u>Focuses</u></div>
        {% for focus in npo.focuses %}
            {{ focus.focus }}</br>
        {% endfor %}
    </div>

{% endblock %}
