{% extends 'base.html.twig' %}

{% block body %}
    {{ form_start(form) }}
    {{ headerText }}

    <div class="row m-1">
        <div class="col-4 form-inline">
            {{ form_row(form.fname) }} {{ form_row(form.sname) }}
        </div>
    </div>
    <div class="row m-1">
        <div class="col-9 form-inline">
            {{ form_row(form.email) }}
        </div>
    </div>
    <div class="row m-1">
        <div class="col-4 form-inline">
            {{ form_row(form.plainPassword.first) }}
        </div>
    </div>
    <div class="row m-1 form-inline">
        <div class="col-4 form-inline">
            {{ form_row(form.plainPassword.second) }}
        </div>
    </div>
    <div class="row m-1">
        <div class="col-4">
            {{ form_row(form._token) }}
            <button class="btn btn-info" type="submit">Create!</button>
        </div>
    </div>


    {{ form_end(form) }}
{% endblock %}
