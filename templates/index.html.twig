{% extends "base.html.twig" %}
{% block body %}
    <div class="row">
        <div class="col-3 font-smaller">
            Having fun are we? Here's what we have so far:<br>
            <h5>To be installed</h5>
            {% if notUsed is empty %}
                None
            {% else %}
                <a class="btn btn-info btn-sm" href="{{ path('load_all') }}" role="button">Load all</a>
                {% for filename in notUsed %}
                    <div class="row">
                        <div class="col-3">
                            <a class="btn btn-success btn-sm" href="{{ path('import_file', {'filename':filename}) }}" role="button">{{ filename }}</a>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
            <h5>Installed (last 10)</h5>
            {% for file in used %}
                <div class="row">
                    <div class="col-3">
                        {{ file.filename }}
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="col-9 text-center">
            <div class="row">
                <div class="col-3"></div>
                <div class="col-3">
                    <nav aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item">
                                <a id="chartPrevious" class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true">&laquo; Chart</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a id="chartNext" class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true">Chart &raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>            
            </div>
            <div class="row">
                <div class="col-12">
                    <div id="chart1"></div>
                    <div id="chart2"></div>
                    <div id="chart3"></div>
                    <div id="chart4"></div>
                    <div id="chart5"></div>
                    <div id="chart6"></div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">
        {{ gc_draw([priceC, countC, priceB, countB, histoC, histoB], ['chart1', 'chart2', 'chart3', 'chart4', 'chart5', 'chart6']) }}
    </script>
    {{ encore_entry_script_tags('charts') }}
{% endblock %}
